@model IEnumerable<EcommerceWeb.ViewModels.ChiTietHoaDonVM>
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Ảnh</th>
                        <th scope="col">Mã hóa đơn</th>
                        <th scope="col">Tên sản phẩm</th>
                        <th scope="col">Đơn giá</th>
                        <th scope="col">Số lượng</th>
                        <th scope="col">Giảm giá</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">
                                <div class="d-flex align-items-center">
                                    <img src="~/Hinh/HangHoa/@item.Anh" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" alt="@item.TenHH">
                                </div>
                            </th>
                            <td>
                                <p class="mb-0 mt-4"> @Html.DisplayFor(modelItem => item.MaHD)</p>
                            </td>
                            <td>
                                <p class="mb-0 mt-4"> @Html.DisplayFor(modelItem => item.TenHH)</p>
                            </td>
                            <td>
                                <p class="mb-0 mt-4"> @Html.DisplayFor(modelItem => item.DonGia) $</p>
                            </td>
                            <td>
                                <p class="mb-0 mt-4"> @Html.DisplayFor(modelItem => item.SoLuong)</p>
                            </td>
                            <td>
                                <p class="mb-0 mt-4"> @Html.DisplayFor(modelItem => item.GiamGia)</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="py-3">
                <p class="mb-0 text-dark">Tổng tiền: @Model.Sum(p => p.DonGia).ToString("#,##0") $</p>
            </div>
        </div>
    </div>
</div>


