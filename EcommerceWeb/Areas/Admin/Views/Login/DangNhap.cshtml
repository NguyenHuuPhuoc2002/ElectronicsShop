@model EcommerceWeb.Areas.Admin.Models.LoginAdminModel
@{
    ViewData["Title"] = "Đăng nhập";
}
<div class="container center-screen">
    <h2 class="text-center mb-5">Đăng nhập</h2>
    <div class="col-md-6 text-center container-fluid">
        <form asp-action="DangNhap" asp-controller="Login" asp-route-returnurl="@ViewBag.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <input type="email" asp-for="@Model.Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="password" asp-for="@Model.MatKhau" class="form-control" placeholder="MatKhau" />
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary w-100 text-uppercase">Đăng nhập</button>
            </div >
            <div class ="form-group mt-3">
                <a asp-controller="KhachHang" asp-action="QuenMatKhau">Quên mật khẩu</a>
            </div>
        </form>
    </div>

</div>

<style>
    .center-screen {
        
       margin-top: 120px
    }
</style>