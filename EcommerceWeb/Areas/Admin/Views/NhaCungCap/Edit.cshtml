@model EcommerceWeb.Areas.Admin.Models.NhaCungCapAdminModel
@{
    ViewData["Title"] = "Chỉnh sửa nhà cung cấp";
}

<!-- Modal -->
<div class="modal fade" id="messageModal" tabindex="-1" role="dialog" aria-labelledby="messageModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="messageModalLabel">Thông báo</h5>
            </div>
            <div class="modal-body text-start ">
                <span id="messageContent" class="text-danger">@ViewBag.Message</span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark text-white" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="row w3-container">

    <hr />
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaNcc" class="control-label fw-bold mt-2 mb-2"></label>
                <input asp-for="MaNcc" class="form-control" value="@Model.MaNcc" readonly />
            </div>
            <div class="form-group">
                <label asp-for="TenCongTy" class="control-label fw-bold mt-2 mb-2"></label>
                <input asp-for="TenCongTy" class="form-control" value="@Model.TenCongTy" />
                <span asp-validation-for="TenCongTy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NguoiLienLac" class="control-label fw-bold mt-2 mb-2"></label>
                <input asp-for="NguoiLienLac" class="form-control" value="@Model.NguoiLienLac" />
                <span asp-validation-for="NguoiLienLac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label fw-bold mt-2 mb-2"></label>
                <input type="email" asp-for="Email" class="form-control" value="@Model.Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DienThoai" class="control-label fw-bold mt-2 mb-2"></label>
                <input type="number" asp-for="DienThoai" class="form-control" value="@Model.DienThoai" />
                <span asp-validation-for="DienThoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChi" class="control-label fw-bold mt-2 mb-2"></label>
                <input asp-for="DiaChi" class="form-control" value="@Model.DiaChi" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoTa" class="control-label fw-bold mt-2 mb-2"></label>
                <textarea asp-for="MoTa" class="form-control" rows="4" cols="50">@Model.MoTa</textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <button type="submit" value="Create" class="btn btn-primary w-100 text-uppercase">Chỉnh sửa</button>
            </div>
        </form>
        <div class="mt-3 text-center mb-5">
            <a asp-action="Index">Quay lại</a>
        </div>
    </div>

</div>

