@using System.Security.Claims
@{
    var userRole = User.FindFirst(ClaimTypes.Role)?.Value;
}﻿
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BaoTest1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="~/backend/js/site.js"></script>
    <style>
        html, body, h1, h2, h3, h4, h5 {
            font-family: "Raleway", sans-serif
        }
    </style>
</head>
<body class="w3-light-grey">

    <!-- Sidebar/menu           w3-animate-left -->
    <nav class="w3-sidebar w3-collapse w3-white " style="z-index:3;width:265px;" id="mySidebar">
        <br>
        <div class="w3-container w3-row">
            @if(userRole == "Admin")
            {
                <div class="w3-col s4">
                    <img src="~/Hinh/Admin/hoanghon.jpg" class="w3-circle w3-margin-right" style="width: 45px; height: 45px">
                </div>
                <div class="w3-col s8 w3-bar">
                    <span>Welcome, <strong>@User.FindFirst(ClaimTypes.Name)?.Value</strong></span><br>
                    <a href="#" class="w3-bar-item w3-button"><i class="fa fa-envelope"></i></a>
                    <a href="#" class="w3-bar-item w3-button"><i class="fa fa-user"></i></a>
                    <a href="#" class="w3-bar-item w3-button"><i class="fa fa-cog"></i></a>
                </div>
            }
        </div>
        <hr>
        <div class="w3-container">
            <h5>Quản Lý</h5>
        </div>
        <div class="w3-bar-block">
            <a href="#" class="w3-bar-item w3-button w3-padding-16 w3-hide-large w3-dark-grey w3-hover-black" onclick="w3_close()" title="close menu"><i class="fa fa-remove fa-fw"></i>  Close Menu</a>
            <a asp-action="Index" asp-controller="Product" class="w3-bar-item w3-button w3-padding w3-blue"><i class="bi bi-bag-fill"></i>  Hàng hóa</a>
            <a asp-action="Index" asp-controller="Loai" class="w3-bar-item w3-button w3-padding "><i class="bi bi-triangle"></i>  Loại</a>
            <a asp-action="Index" asp-controller="NhaCungCap" class="w3-bar-item w3-button w3-padding "><i class="bi bi-house-fill"></i>  Nhà cung cấp</a>
            <a asp-action="Index" asp-controller="NhanVien" class="w3-bar-item w3-button w3-padding "><i class="bi bi-people"></i></i>  Nhân viên</a>

            <hr />
            <a asp-action="Index" asp-controller="DonHang" class="w3-bar-item w3-button w3-padding"><i class="fa fa-eye fa-fw"></i>  Đơn hàng mới</a>
            <a asp-action="LichSu" asp-controller="DonHang" class="w3-bar-item w3-button w3-padding"><i class="fa fa-history fa-fw"></i>  Lịch sử đơn hàng</a>
            <a href="#" class="w3-bar-item w3-button w3-padding"><i class="fa fa-cog fa-fw"></i>  Cài đặt</a>
            @if (User.Identity.IsAuthenticated)
            {
                if (userRole == "Admin")
                {
                    <a asp-action="DangXuat" asp-controller="Login" asp-area="Admin" class="w3-bar-item w3-button w3-padding">
                        <i class="bi bi-box-arrow-left"></i>  Đăng xuất
                    </a>   <br><br>
                }

            }
           
        </div>
    </nav>
   
    <!-- Overlay effect when opening sidebar on small screens -->
    <div class="w3-overlay w3-hide-large w3-animate-opacity" onclick="w3_close()" style="cursor:pointer" title="close side menu" id="myOverlay"></div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-10">

                <!-- header -->
                <div class="container-fluid">
                    <!-- header -->
                    <header class="w3-container w3-xlarge w-100 h-auto">
                        <div class="mt-3">
                            <p class="w3-right ms-lg-3">
                                <a asp-action="Create" asp-controller="Product" class="btn btn-primary">Thêm mới sản phẩm</a>
                            </p>
                            <p class="w3-right ms-lg-3">
                                <a asp-action="Create" asp-controller="Loai" class="btn btn-primary">Thêm mới loại</a>
                            </p>
                            <p class="w3-right ms-lg-3">
                                <a asp-action="Create" asp-controller="NhaCungCap" class="btn btn-primary">Thêm mới nhà cung cấp</a>
                            </p>
                            <h2>@ViewData["Title"]</h2>
                        </div>
                    </header>
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        // Get the Sidebar
        var mySidebar = document.getElementById("mySidebar");

        // Get the DIV with overlay effect
        var overlayBg = document.getElementById("myOverlay");

        // Toggle between showing and hiding the sidebar, and add overlay effect
        function w3_open() {
            if (mySidebar.style.display === 'block') {
                mySidebar.style.display = 'none';
                overlayBg.style.display = "none";
            } else {
                mySidebar.style.display = 'block';
                overlayBg.style.display = "block";
            }
        }

        // Close the sidebar with the close button
        function w3_close() {
            mySidebar.style.display = "none";
            overlayBg.style.display = "none";
        }
    </script>

</body>
</html>